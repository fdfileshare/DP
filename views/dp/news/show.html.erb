                        <div id="wpcomm" class="wpdiscuz_auth" style="display: block; opacity: 1;">
                    
                <div id="wpdiscuz_hidden_secondary_form" style="display: none;">
                    
                </div>
            		<% @news.news_comments.each do |comment| %>
                                <div id="wcThreadWrapper" class="wc-thread-wrapper"><div id="wc-comm-42_0" class="wc-comment wc-blog-administrator wc_comment_level-1 moved"><div class="wc-comment-right "><div class="wc-comment-header"><div class="wc-comment-author"><%= comment.name %> / <%= comment.email %></div>
                                <div class="wpdiscuz_clear"></div></div>
                                <div class="wc-comment-text">
<p><%= simple_format(comment.description) %></p>
</div>
<div style="clear:both"></div>
</div></div>
<% end %>


<div class="wc-form-wrapper wc-main-form-wrapper" id="wc-main-form-wrapper-0_0">
            <div class="wpdiscuz-comment-message" style="display: block;"></div>
       
       <%= form_for @new_comment, :url => dp_create_news_comment_path do |f| %>

       <h3 class="wc-form-header">Add your Comment</h3>
                    <div class="wc-form-footer" style="display: none;"> 
                                <div class="wpd-form-row">

                <div class="wpd-form-col-right">
                    
                </div>
                    <div class="clearfix"></div>
        </div>
                            </div><div class="wc-field-comment">
                                                <div class="wpdiscuz-item wc-field-textarea">
                            <div class="wpdiscuz-textarea-wrap ">
                            <%= f.text_field :name ,{placeholder: :Name, required: true} %>
                            <%= f.text_field :email ,{placeholder: 'Company Name', required: true} %>
                            <%= f.text_area :description ,{placeholder: :Message, required: true, class: 'wc_comment wpd-field"'} %>
                            <%= f.hidden_field :news_id, {value: @news.id.to_s} %>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div><div class="wc-field-submit"><%= f.submit 'Post Comment' , { class: 'wc_comm_submit button alt wc_not_clicked'} %></div>
                    
                    <div class="clearfix"></div>
                    <input type="hidden" class="wpdiscuz_unique_id" value="0_0" name="wpdiscuz_unique_id">
         <% end %>
         <%= link_to 'Delete News', :dp_news, method: :delete, data: { confirm: 'Are you sure you want to delete this news? This operation cannot be undone. ?' } %>
