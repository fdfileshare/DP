	<h1 class="postTitle"><span><%= @news.title %></span></h1>
	<div class="postContents">
		<div class="eyecatch" ><%= image_tag @news.eyecatch.url(:original) %></div>

		<div class="entry-content" id="visual_composer_content">
			<%= raw(@news.description) %><
		</div><!-- .entry-content -->
	</div><!-- .postContents -->

<div id="comments" class="comments-area loaded">
                    <div id="respond" style="width: 0;height: 0;clear: both;margin: 0;padding: 0;"></div>
